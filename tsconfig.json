{
  "compilerOptions": {
    "outDir": "dist/src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2020",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/index.ts"
  ],
}
